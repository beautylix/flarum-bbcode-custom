{
    "name": "beautylix/flarum-bbcode-custom",
    "description": "Custom flarum bbcode.",
    "type": "flarum-extension",
    "keywords": ["discussion", "template"],
    "license": "MIT",
    "authors": [
        {
            "name": "Tiby Wang",
            "role": "Creator"
        }
    ],
    "support": {
        "issues": "https://github.com/beautylix/flarum-bbcode-custom/issues",
        "source": "https://github.com/beautylix/flarum-bbcode-custom",
        "forum": "https://discuss.flarum.org"
    },

    "require": {
        "flarum/core": "^1.0"
